<%- include('partials/header') %>
  <link rel="stylesheet" href="/css/customer/dashboard.css">
  <style>
    .coming-soon-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: calc(100vh - var(--dash-topbar-height) - 4rem);
      text-align: center;
      padding: 2rem;
    }

    .coming-soon-icon {
      width: 120px;
      height: 120px;
      background: var(--dash-bg-accent);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      color: var(--dash-primary);
    }

    .coming-soon-icon i {
      width: 56px;
      height: 56px;
    }

    .coming-soon-title {
      font-size: 2rem;
      font-weight: 800;
      color: var(--dash-text-primary);
      margin-bottom: 0.75rem;
    }

    .coming-soon-subtitle {
      font-size: 1.1rem;
      color: var(--dash-text-muted);
      max-width: 500px;
      line-height: 1.7;
      margin-bottom: 2rem;
    }

    .coming-soon-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.12), rgba(139, 92, 246, 0.12));
      border: 1px solid rgba(99, 102, 241, 0.3);
      border-radius: 2rem;
      color: var(--dash-primary);
      font-weight: 600;
      font-size: 0.9rem;
    }

    .coming-soon-badge i {
      width: 18px;
      height: 18px;
    }
  </style>
  </head>

  <body>
    <div class="dash-wrapper">
      <%- include('partials/sidebar', { activePage: '' , user: user, stats: { pendingOrders: 0 } }) %>

        <main class="dash-main">
          <%- include('partials/topbar', { pageTitle: pageName, notifications: [], website: {} }) %>

            <div class="dash-content">
              <div class="coming-soon-container">
                <div class="coming-soon-icon">
                  <i data-lucide="rocket"></i>
                </div>
                <h1 class="coming-soon-title">
                  <%= pageName %>
                </h1>
                <p class="coming-soon-subtitle">
                  This feature is currently under development and will be available soon.
                  We're working hard to bring you the best experience possible.
                </p>
                <div class="coming-soon-badge">
                  <i data-lucide="sparkles"></i>
                  Coming Soon
                </div>
              </div>
            </div>
        </main>
    </div>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>lucide.createIcons();</script>
  </body>

  </html>