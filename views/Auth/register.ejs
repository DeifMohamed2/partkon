        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="register-card">
            <!-- Progress Bar (subtle) -->
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <span class="progress-text" id="progressText">Step 1 of 4</span>
            </div>

            <!-- Steps Container -->
            <div class="steps-wrapper">
                <div class="steps-container" id="stepsContainer">

                    <!-- Step 1: Role Selection -->
                    <div class="step active" data-step="1">
                        <div class="step-header">
                            <div class="step-icon">
                                <i data-lucide="user-circle"></i>
                            </div>
                            <h1>What's your role?</h1>
                            <p>Help us personalize your experience</p>
                        </div>
                        <div class="role-options">
                            <label class="role-card">
                                <input type="radio" name="role" value="business_owner" required>
                                <div class="role-content">
                                    <div class="role-icon"><i data-lucide="briefcase"></i></div>
                                    <span class="role-title">Business Owner</span>
                                    <span class="role-desc">I run my own company</span>
                                </div>
                            </label>
                            <label class="role-card">
                                <input type="radio" name="role" value="manager">
                                <div class="role-content">
                                    <div class="role-icon"><i data-lucide="users"></i></div>
                                    <span class="role-title">Team Manager</span>
                                    <span class="role-desc">I manage a team</span>
                                </div>
                            </label>
                            <label class="role-card">
                                <input type="radio" name="role" value="freelancer">
                                <div class="role-content">
                                    <div class="role-icon"><i data-lucide="laptop"></i></div>
                                    <span class="role-title">Freelancer</span>
                                    <span class="role-desc">I work independently</span>
                                </div>
                            </label>
                            <label class="role-card">
                                <input type="radio" name="role" value="developer">
                                <div class="role-content">
                                    <div class="role-icon"><i data-lucide="code"></i></div>
                                    <span class="role-title">Developer</span>
                                    <span class="role-desc">I build software</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Step 2: Team Size -->
                    <div class="step" data-step="2">
                        <div class="step-header">
                            <div class="step-icon">
                                <i data-lucide="users-2"></i>
                            </div>
                            <h1>How big is your team?</h1>
                            <p>This helps us recommend the right plan</p>
                        </div>
                        <div class="team-options">
                            <label class="team-card">
                                <input type="radio" name="teamSize" value="just_me" required>
                                <div class="team-content">
                                    <span class="team-number">1</span>
                                    <span class="team-label">Just me</span>
                                </div>
                            </label>
                            <label class="team-card">
                                <input type="radio" name="teamSize" value="small">
                                <div class="team-content">
                                    <span class="team-number">2-10</span>
                                    <span class="team-label">Small team</span>
                                </div>
                            </label>
                            <label class="team-card">
                                <input type="radio" name="teamSize" value="medium">
                                <div class="team-content">
                                    <span class="team-number">11-50</span>
                                    <span class="team-label">Growing team</span>
                                </div>
                            </label>
                            <label class="team-card">
                                <input type="radio" name="teamSize" value="large">
                                <div class="team-content">
                                    <span class="team-number">51-200</span>
                                    <span class="team-label">Large team</span>
                                </div>
                            </label>
                            <label class="team-card">
                                <input type="radio" name="teamSize" value="enterprise">
                                <div class="team-content">
                                    <span class="team-number">200+</span>
                                    <span class="team-label">Enterprise</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Step 3: How did you hear about us -->
                    <div class="step" data-step="3">
                        <div class="step-header">
                            <div class="step-icon">
                                <i data-lucide="megaphone"></i>
                            </div>
                            <h1>How did you find us?</h1>
                            <p>We'd love to know how you discovered PartKon</p>
                        </div>
                        <div class="source-options">
                            <label class="source-card">
                                <input type="radio" name="source" value="google" required>
                                <div class="source-content">
                                    <i data-lucide="search"></i>
                                    <span>Google Search</span>
                                </div>
                            </label>
                            <label class="source-card">
                                <input type="radio" name="source" value="social">
                                <div class="source-content">
                                    <i data-lucide="share-2"></i>
                                    <span>Social Media</span>
                                </div>
                            </label>
                            <label class="source-card">
                                <input type="radio" name="source" value="friend">
                                <div class="source-content">
                                    <i data-lucide="heart-handshake"></i>
                                    <span>Friend or Colleague</span>
                                </div>
                            </label>
                            <label class="source-card">
                                <input type="radio" name="source" value="youtube">
                                <div class="source-content">
                                    <i data-lucide="youtube"></i>
                                    <span>YouTube</span>
                                </div>
                            </label>
                            <label class="source-card">
                                <input type="radio" name="source" value="blog">
                                <div class="source-content">
                                    <i data-lucide="file-text"></i>
                                    <span>Blog or Article</span>
                                </div>
                            </label>
                            <label class="source-card">
                                <input type="radio" name="source" value="other">
                                <div class="source-content">
                                    <i data-lucide="more-horizontal"></i>
                                    <span>Other</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Step 4: Account Details -->
                    <div class="step" data-step="4">
                        <div class="step-header">
                            <div class="step-icon">
                                <i data-lucide="shield-check"></i>
                            </div>
                            <h1>Create your account</h1>
                            <p>Just a few more details to get started</p>
                        </div>
                        <form class="register-form" id="registerForm" action="/register" method="POST">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="firstName">First Name</label>
                                    <div class="input-wrapper">
                                        <i data-lucide="user" class="input-icon"></i>
                                        <input type="text" id="firstName" name="firstName" placeholder="John" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName">Last Name</label>
                                    <div class="input-wrapper">
                                        <i data-lucide="user" class="input-icon"></i>
                                        <input type="text" id="lastName" name="lastName" placeholder="Doe" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <div class="input-wrapper">
                                    <i data-lucide="mail" class="input-icon"></i>
                                    <input type="email" id="email" name="email" placeholder="john@example.com" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <div class="input-wrapper">
                                    <i data-lucide="lock" class="input-icon"></i>
                                    <input type="password" id="password" name="password"
                                        placeholder="Create a strong password" required>
                                    <button type="button" class="password-toggle" onclick="togglePassword('password')">
                                        <i data-lucide="eye" id="password-eye"></i>
                                    </button>
                                </div>
                                <div class="password-strength">
                                    <div class="strength-bar">
                                        <div class="strength-fill" id="strength-fill"></div>
                                    </div>
                                    <span class="strength-text" id="strength-text">Enter a password</span>
                                </div>
                            </div>

                            <div class="terms-group">
                                <label class="custom-checkbox">
                                    <input type="checkbox" name="terms" required>
                                    <span class="checkmark"></span>
                                </label>
                                <span class="terms-text">
                                    I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy
                                        Policy</a>
                                </span>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="step-navigation">
                <button type="button" class="nav-btn-back" id="backBtn" onclick="prevStep()"
                    style="visibility: hidden;">
                    <i data-lucide="arrow-left"></i>
                    Back
                </button>
                <button type="button" class="nav-btn-next" id="nextBtn" onclick="nextStep()">
                    Continue
                    <i data-lucide="arrow-right"></i>
                </button>
            </div>

            <!-- Sign in link -->
            <div class="signin-link">
                Already have an account? <a href="/">Sign in</a>
            </div>
        </div>
